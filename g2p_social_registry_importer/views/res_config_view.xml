<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="social_registry_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">social.registry.res.config.settings.view.inherit.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="999" />
        <field name="inherit_id" ref="g2p_registry_base.openg2p_inherit_res_config_settings_view_form" />
        <field name="arch" type="xml">
            <app name="g2p_config_settings" position="after">
                <app
                    string="Social Registry Import Settings"
                    name="social_registry_config"
                    logo="/g2p_registry_base/static/description/icon.png"
                >
                    <block title="Social Registry Import Settings">
                        <setting
                            string="Enable Background Processing"
                            help="Once enabled, the Social Registry import will be processed in the background using job queues."
                        >
                            <field name="enable_social_registry_async" />
                        </setting>
                    </block>
                </app>
            </app>
        </field>
    </record>
</odoo>
