<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="view_program_membership_documents_form" model="ir.ui.view">
        <field name="name">view_program_membership_documents_form</field>
        <field name="model">g2p.program_membership</field>
        <field name="inherit_id" ref="g2p_programs.view_program_membership_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='entitlement']/.." position="inside">
                <page string="Documents" name="documents">
                    <field name="supporting_documents_ids" nolabel="1" colspan="2">
                        <tree default_order="id desc">
                            <field name="name" readonly="1" column_invisible="1" />
                            <field name="tags_ids" widget="many2many_tags" />
                            <field name="slug" string="Name" />
                            <field name="url" readonly="1" column_invisible="1" />
                            <field name="file_size" />
                            <field name="file_type" />
                            <field name="mimetype" readonly="1" column_invisible="1" />
                            <!-- Widget provided by g2p_documents module for document preview and viewing -->
                            <widget name="g2p_documents_action_preview" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
