<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_entitlement_docs_form" model="ir.ui.view">
        <field name="name">view_entitlement_docs_form</field>
        <field name="model">g2p.entitlement</field>
        <field name="inherit_id" ref="g2p_programs.view_entitlement_form" />
        <field name="priority" eval="160" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_approved']/../.." position="after">
            <field name="document_count" invisible='1' />
                <group string="Supporting Documents" invisible="document_count == 0">
                    <field name="supporting_document_ids" readonly="1" nolabel="1" colspan="2">
                        <tree default_order="id desc">
                            <field name="name" readonly="1" column_invisible="1" />
                            <field name="tags_ids" widget="many2many_tags" />
                            <field name="slug" string="Name" />
                            <field name="url" readonly="1" column_invisible="1" />
                            <field name="file_size" />
                            <field name="file_type" />
                            <field name="mimetype" readonly="1" column_invisible="1" />
                            <!-- Widget provided by g2p_documents module for document preview and viewing -->
                            <widget name="g2p_documents_action_preview" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
